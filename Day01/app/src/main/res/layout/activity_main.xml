<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/result"
            android:layout_width="350dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="50dp"
            android:paddingLeft="300dp"
            android:text="0"
            android:textSize="50sp" />

        <Button
            android:id="@+id/btn1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn2"
            android:text="1"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:text="2"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/btn2"
            android:text="3"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn2"
            android:layout_above="@id/btn1"
            android:text="4"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_above="@id/btn2"
            android:text="5"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/btn2"
            android:layout_above="@id/btn3"
            android:text="6"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_above="@id/btn4"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn5"
            android:text="7"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_above="@id/btn5"
            android:layout_centerInParent="true"
            android:text="8"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_above="@id/btn6"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/btn5"
            android:text="9"
            android:textSize="30sp" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn2"
            android:layout_centerInParent="true"
            android:layout_marginBottom="30dp"
            android:text="0"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sum"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn0"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/sub"
            android:text="+"
            android:textSize="30sp" />

        <Button
            android:id="@+id/sub"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn0"
            android:layout_centerInParent="true"
            android:text="-"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/sum"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/splt"
            android:text="*"
            android:textSize="30sp" />

        <Button
            android:id="@+id/splt"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/sub"
            android:layout_centerInParent="true"
            android:text="/"

            android:textSize="30sp"

            />

        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn1"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/btn0"
            android:text="Back"
            android:textSize="20sp" />

        <Button
            android:id="@+id/ok"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/btn3"
            android:layout_toRightOf="@id/btn0"
            android:text="Enter"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_below="@id/sub"
            android:layout_toRightOf="@id/splt"
            android:text="Clear"
            android:textSize="20sp" />
</RelativeLayout>