<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <TextView
       android:id="@+id/comment_tv"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="등록된 댓글이 없습니다."
       android:layout_margin="20dp"
       android:textSize="17sp"
       />
   <ListView
       android:layout_marginLeft="20dp"
       android:layout_marginRight="20dp"
       android:id="@+id/comment_lv"
       android:layout_below="@id/comment_tv"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_above="@id/comment_add"
       android:layout_marginBottom="10dp"
       />

   <EditText
       android:id="@+id/comment_add"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginLeft="20dp"
       android:layout_toLeftOf="@id/comment_add_btn"
       android:layout_marginBottom="20dp"
       />
   <Button
       android:id="@+id/comment_add_btn"
       android:layout_width="60dp"
       android:layout_height="50dp"
       android:layout_marginRight="20dp"
       android:layout_alignBottom="@id/comment_add"
       android:layout_alignParentEnd="true"
       android:textSize="13sp"
       android:text="입력"
       />
</RelativeLayout>
