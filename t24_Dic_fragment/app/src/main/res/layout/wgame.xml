<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/game_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00.00"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"/>
    <TextView
        android:id="@+id/game_process"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"
        android:text="진행 상황"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/game_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz"
        android:textSize="30sp"
        android:layout_below="@id/game_timer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/game_answer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_quiz"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />
    <Button
        android:id="@+id/game_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력"
        android:layout_toRightOf="@id/game_answer"
        android:layout_alignBottom="@id/game_answer"
        />

    <Button
        android:id="@+id/game_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작"
        android:layout_below="@id/game_answer"
        android:layout_marginTop="25dp"
        android:layout_alignRight="@id/game_answer"
        />
    <Button
        android:id="@+id/game_quite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나가기"
        android:layout_alignLeft="@id/game_answer"
        android:layout_below="@id/game_answer"
        android:layout_marginTop="25dp"
        />
    <ProgressBar
        android:id="@+id/game_process_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        />
</RelativeLayout>