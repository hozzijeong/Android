<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/lobby_big_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:background="#E6DC98"
        android:visibility="invisible"
        >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <Button
        android:id="@+id/lobby_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#9DDFE8"
        />
        <LinearLayout
            android:id="@+id/lobby_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            >
            <ImageView
                android:id="@+id/circle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_off"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/circle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_on"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/circle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_on"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/circle4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/circle_on"
                android:layout_weight="1"
                />
        </LinearLayout>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/lobby_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src = "@drawable/member_icon"
        android:layout_centerInParent="true"
        />


</RelativeLayout>