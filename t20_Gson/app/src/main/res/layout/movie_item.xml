<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="영화 제목"
        />

    <TextView
        android:id="@+id/movie_amount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="관객수: "
        android:textSize="20sp"
        android:layout_below="@id/movie_opendt_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/movie_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="20sp"
        android:layout_alignBottom="@id/movie_amount_tv"
        android:layout_toRightOf="@id/movie_amount_tv"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/movie_opendt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/movie_amount_tv"
        android:layout_marginRight="20dp"
        android:text="20180818"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/movie_opendt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:text="개봉일"
        android:textSize="20dp"
        android:layout_below="@id/movie_title"
        />


</RelativeLayout>