<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
   <de.hdodenhof.circleimageview.CircleImageView
       android:id="@+id/my_profile"
       android:layout_width="150dp"
       android:layout_height="150dp"
       android:layout_margin="20dp"
       />
   <TextView
      android:id="@+id/my_nickname"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_toRightOf="@id/my_profile"
       android:text="내 닉네임"
       android:textSize="24sp"
       android:layout_alignTop="@id/my_profile"
       />
   <TextView
      android:id="@+id/my_feed_num"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="게시물 숫자"
       android:layout_below="@id/my_nickname"
       android:layout_alignStart="@id/my_nickname"
       android:textSize="24sp"
       android:layout_marginTop="15dp"
       />
   <TextView
       android:id="@+id/my_name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="내 이름"
       android:layout_below="@id/my_feed_num"
       android:layout_alignStart="@id/my_nickname"
       android:layout_marginTop="15dp"
       android:textSize="25sp"
       android:textStyle="bold"
       />
   <View
       android:id="@+id/line"
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:layout_below="@id/my_profile"
       android:background="@drawable/line_shape"
       android:layout_marginRight="20dp"
       android:layout_marginLeft="20dp"
       />
   <TextView
       android:id="@+id/my_message"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_below="@id/line"
       android:layout_marginTop="15dp"
       />
   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/my_feeds"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:scrollbarSize="5dp"
       android:scrollbarFadeDuration="0"
       android:scrollbarThumbVertical="@android:color/darker_gray"
       android:scrollbars="vertical"
       android:layout_below="@id/line"
       android:layout_alignStart="@id/line"
       android:layout_alignEnd="@id/line"
       android:focusable="false"
       android:focusableInTouchMode="false"
       />
</RelativeLayout>
