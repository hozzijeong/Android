<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    >
    <TextView
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:text="Client"
        android:textSize="20sp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/transfer_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/client_name"
        android:layout_below="@id/client_name"
        android:layout_marginTop="20dp"
        android:text="Cost"
        android:textSize="20sp"
        />
    <TextView
        android:id="@+id/total_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/client_name"
        android:layout_below="@id/transfer_cost"
        android:text="Total"
        android:layout_marginTop="10dp"
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/transfer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/transfer_cost"
        android:layout_marginLeft="20dp"
        android:text="이동 금액"
        android:textSize="20dp"
        />
    <TextView
        android:id="@+id/total_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/total_cost"
        android:layout_marginLeft="20dp"
        android:text="총 잔액"
        android:textSize="20dp"
        />

</RelativeLayout>