<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/hang_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hang Man"
        android:textSize="30sp"
        android:layout_margin="30dp"
        />
    <Button
        android:id="@+id/hang_quite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/hang_tv"
        android:layout_marginRight="40dp"
        />
    <ImageView
        android:id="@+id/hang_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:src="@drawable/ic_launcher_background"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hang_tv"
        />

    <TextView
        android:id="@+id/hang_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hang_image"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="adsfsadfasdf"
        android:textSize="20sp"
        />
    <EditText
        android:id="@+id/hang_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/hang_quiz"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:gravity="center"/>
    <Button
        android:id="@+id/hang_insert_btn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="입력"
        android:layout_toRightOf="@id/hang_input"
        android:layout_alignBottom="@id/hang_input"
        android:textSize="13sp"

        />
</RelativeLayout>