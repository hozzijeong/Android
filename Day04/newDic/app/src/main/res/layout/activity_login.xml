<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <LinearLayout
        android:id="@+id/login_id_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:weightSum="3">
        <TextView
            android:id="@+id/login_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: "
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="아이디 입력"
            android:textSize="20sp"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pw_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginTop="20dp"
        android:layout_below="@id/login_id_layout">
        <TextView
            android:id="@+id/login_pw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pw: "
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center"
            />
        <EditText
            android:id="@+id/login_pw_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호 입력"
            android:textSize="20sp"
            android:layout_weight="2"
            />
    </LinearLayout>

    <Button
        android:id="@+id/login_joinbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 가입"
        android:background="#ffffff"
        android:layout_below="@id/login_pw_layout"
        android:layout_alignLeft="@id/login_pw_layout"
        android:layout_marginTop="15dp"
        />
  <Button
        android:id="@+id/login_loginbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:background="#ffffff"
        android:layout_below="@id/login_pw_layout"
        android:layout_alignRight="@id/login_pw_layout"
        android:layout_marginTop="15dp"
        />

</RelativeLayout>